{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm: dev (with venv)",
      "type": "shell",
      "command": "npm run dev",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "options": {
        "env": {
          "PATH": "${workspaceFolder}\\.venv\\Scripts;${workspaceFolder}\\venv\\Scripts;${env:PATH}"
        }
      },
      "problemMatcher": [ ]
    }
  ]
}